<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    <Button
        android:id="@+id/Button01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button_camera"
        android:layout_below="@+id/textView1"
        android:text="Choose from your library" />

    <Button
        android:id="@+id/button_camera"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/Button01"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="OpenCamera"
        android:text="Use camera" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/hello"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:textSize="28sp" />

    <Button
        android:id="@+id/button_upload_photo"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:text="Upload Photo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="15dp"
        android:text="@string/stream_name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/editText1"
        android:src="@drawable/empty_photo" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_alignLeft="@+id/button_camera"
        android:layout_below="@+id/button_camera"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Add a message and/or tags"
        android:inputType="textMultiLine" />

</RelativeLayout>