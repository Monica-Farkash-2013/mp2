<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/Button01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_alignTop="@+id/button_camera"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/button_camera"
        android:text="Browse gallery" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@+id/button_camera"
        android:layout_toLeftOf="@+id/Button01"
        android:ems="10"
        android:hint="Add a message and/or tags"
        android:inputType="textMultiLine" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/ImageView01"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignLeft="@+id/Button01"
        android:layout_alignRight="@+id/Button01"
        android:src="@drawable/empty_photo" />

    <Button
        android:id="@+id/button_camera"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="71dp"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="OpenCamera"
        android:text="Camera" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/hello"
        android:textColor="@android:color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/button_upload_photo"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="36dp"
        android:text="Upload Photo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_upload_photo"
        android:layout_alignBottom="@+id/button_upload_photo"
        android:layout_marginRight="34dp"
        android:layout_toLeftOf="@+id/button_upload_photo"
        android:text="Stream Name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>